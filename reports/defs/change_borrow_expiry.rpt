.title "Set borrow allowable time"
.category "Circulation"
.layout authority_list title="Allowable borrow time"
.parameters
.	string c_code title="Collection Type"
.	string c_days_due_back title="Number of days allowed"
.	string c_regular_late_fee title="Late fee rate 0.01->0.10"
.end parameters

.sql
	UPDATE collection_circ
	SET days_due_back = %c_days_due_back%, 
	regular_late_fee = %c_regular_late_fee% 
	WHERE code = %c_code%;
.end sql
